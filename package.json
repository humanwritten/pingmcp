{
  "name": "pingmcp",
  "version": "1.0.0",
  "description": "Audio notifications for Claude - Never miss when Claude finishes tasks. Perfect for multi-Claude workflows and long operations.",
  "type": "module",
  "main": "server.js",
  "bin": {
    "pingmcp": "server.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "test-sounds": "node test-sounds.js",
    "test-cross-platform": "node test-cross-platform.js"
  },
  "keywords": ["mcp", "claude", "notifications", "audio", "productivity", "multi-claude", "terminal"],
  "author": "humanwritten",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/humanwritten/pingmcp.git"
  },
  "homepage": "https://github.com/humanwritten/pingmcp#readme",
  "bugs": {
    "url": "https://github.com/humanwritten/pingmcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  },
  "mcp": {
    "capabilities": {
      "tools": {
        "notify": {
          "description": "Play a notification sound to alert the user"
        }
      }
    }
  }
}